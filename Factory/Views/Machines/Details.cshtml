@{
  Layout = "_Layout";
}

@using Factory.Models;
@model Factory.Models.Machine;

<h2>@Html.DisplayFor(model => model.Name) details</h2>

<hr>
<input type="button" class="btn btn-outline-warning" value="Edit machine" onclick="location.href='@Url.Action("Edit", new { id = Model.MachineId })'">
<input type="button" class="btn btn-outline-danger" value="Delete machine" onclick="location.href='@Url.Action("Delete", new { id = Model.MachineId })'">
<input type="button" class="btn btn-outline-primary" value="Back to list" onclick="location.href='@Url.Action("Index")'">
<hr>

@if(@Model.JoinEntities.Count == 0)
{
  <p>There are no engineers certified to repair @Html.DisplayFor(model => model.Name).</p>
}
else
{
  <h4>@Html.DisplayFor(model => model.Name) is certified to be repaired by:</h4>
  <ul>
  @foreach(EngineerMachine join in Model.JoinEntities)
  {
    <li>@Html.ActionLink($"Engineer {join.Engineer.Name}", "Details", "Engineers", new { id = join.Engineer.EngineerId })</li>
  }
  </ul>
}